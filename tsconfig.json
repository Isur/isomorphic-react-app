{
  "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "module": "commonjs",
      "target": "es2020",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
  },
  "include": [
      "./src/**/*",
      "src/client/.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "types.d.ts"
  ]
}
